
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VistaAgregar</title>
    <!-- Agregamos archivo .css de Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Agregamos archivo .js de Bootstrap -->
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <div class="container">
        <h1>Nuevo Producto</h1>

        @if (TempData["validaciones"] != null)
        {
            <div class="alert alert-warning">
                
                @Html.Raw(TempData["validaciones"])
            </div>
        }

        <form action="/Producto/Agregar" method="post">
            <label>Descripcion</label>
            <input type="text" name="Descripcion" class="form-control" />

            <br /><br />
            <label>Precio</label>
            <input type="text" name="Precio" class="form-control" />

            <br /><br />
            <label>Fecha Ingreso</label>
            <input type="date" name="FechaIngreso" class="form-control" />

            <br /><br />
            <label>¿Esta Disponible?</label>
            <div>
                <input type="radio" name="Disponible" value="true" />
                <label>Si</label>

                <input type="radio" name="Disponible" value="false" />
                <label>No</label>
            </div>
            <br />
            <input type="submit" value="Registrar" class="btn btn-primary" />
        </form>
    </div>
</body>
</html>
